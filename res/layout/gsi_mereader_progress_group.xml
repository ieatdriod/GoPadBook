<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="wrap_content"
	android:id="@+id/ProgressGroup_SBar_relativelayout" android:background="@drawable/gsi_br05_transpa">

<RelativeLayout android:layout_width="wrap_content" android:id="@+id/SeekGroup_relativelayout" android:background="@drawable/gsi_br05_transpa" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="fill_parent" android:id="@+id/seekbar_LinearLayout" android:background="@drawable/gsi_br05_transpa" android:layout_height="wrap_content" android:orientation="horizontal">
            <tw.com.soyong.utility.SySeekBar android:progress="0" android:max="100" android:layout_height="wrap_content" android:paddingLeft="20dip" android:layout_width="fill_parent" android:maxHeight="8dip" android:paddingRight="20dip" android:id="@+id/seekbar" android:minHeight="8dip" android:layout_gravity="center_vertical"></tw.com.soyong.utility.SySeekBar>
        </LinearLayout>
        <TextView android:paddingLeft="12dip" android:text="00:00" android:textStyle="bold" android:layout_height="wrap_content" android:id="@+id/cur_time" android:layout_width="wrap_content" android:textColor="#ff6bd8f3" android:paddingTop="8dip" style="?android:attr/textAppearanceSmall" android:gravity="left" android:layout_alignParentLeft="true" android:layout_alignBottom="@+id/seekbar_LinearLayout"></TextView>
        <TextView android:text="00:00" android:paddingRight="12dip" android:textStyle="bold" android:layout_height="wrap_content" android:id="@+id/totoal_time" android:layout_width="wrap_content" android:paddingTop="8dip" style="?android:attr/textAppearanceSmall" android:gravity="right" android:layout_alignParentRight="true" android:layout_alignBottom="@+id/seekbar_LinearLayout"></TextView>
    </RelativeLayout>


	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/Info_Group_relativelayout" android:visibility="visible" android:background="@drawable/gsi_br05_transpa">
		<ImageView android:layout_height="wrap_content" android:id="@+id/rangeIcon"
			android:src="@drawable/loop_all" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:paddingRight="12dip" android:paddingTop="2dip"></ImageView>
		<ImageView android:layout_height="wrap_content" android:id="@+id/repeatIcon"
			android:src="@drawable/cue_repeat" android:background="@null"
			android:layout_width="wrap_content" android:layout_toLeftOf="@+id/rangeIcon" android:paddingRight="5dip" android:paddingTop="2dip"></ImageView>
		<ImageView android:layout_height="wrap_content" android:id="@+id/extIcon"
			android:src="@drawable/cue_ext"
			android:background="@null" android:layout_width="wrap_content" android:layout_toLeftOf="@+id/repeatIcon" android:paddingRight="5dip" android:paddingTop="2dip"></ImageView>
	</RelativeLayout>

</RelativeLayout>			
			