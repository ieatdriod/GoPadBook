<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:pj="http://schemas.android.com/apk/res/org.iii.twmbook"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <!-- top panel -->
 	<RelativeLayout
 		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/RelativeLayout_Title">  		    
      <ImageButton  
      android:layout_height="wrap_content" 
      android:layout_width="fill_parent" android:id="@+id/ChapterList_ImageButton_TopBG" android:background="@drawable/gsi_br06"></ImageButton>	    			    
      <ImageButton 
	      android:id="@+id/ChapterList_ImageButton_Back" 
	      android:layout_width="wrap_content" 
	      android:layout_height="wrap_content" 
	      android:layout_alignParentLeft="true" android:background="@drawable/gsi_button01_btn">
      </ImageButton>
	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:id="@+id/RelativeLayout_Catalog"
		android:layout_toRightOf="@+id/ChapterList_ImageButton_Back">
		
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/gsimedia_title_bg_Catalog" 
			android:background="@drawable/gsi_title_bg01"/>
			
		<ImageButton android:id="@+id/ChapterList_ImageButton_Catalog"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/gsi_title07"></ImageButton>
	</RelativeLayout>
	
	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/RelativeLayout_Catalog" >
		
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/gsimedia_title_bg_Bookmark" 
			android:background="@drawable/gsi_title_bg02_1"/>
		
		<ImageButton android:id="@+id/ChapterList_ImageButton_Bookmark"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/gsi_title08_1"></ImageButton>
	</RelativeLayout>
    
      <ImageButton 
	      android:id="@+id/ChapterList_ImageButton_Info" 
	      android:layout_width="wrap_content" 
	      android:layout_height="wrap_content" 
	      android:layout_alignParentRight="true" android:background="@drawable/gsi_button06_btn">
      </ImageButton> 
</RelativeLayout>
   <!-- end top panel -->
   
   <!-- content area -->	
   	<!-- end content area --> 
 <!-- Bottom button  -->
	<RelativeLayout
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:background="@drawable/gsi_br03" 
	    android:id="@+id/ChapterList_RelativeLayout_Clean" android:layout_alignParentBottom="true">

	      <LinearLayout android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent">		
		
			<ImageButton 
		      android:id="@+id/ChapterList_ImageButton_Clean" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content" 
		      android:background="@drawable/ian_delete_all_bookmark"
android:layout_gravity="center_horizontal" android:layout_marginTop="5dip">
	      </ImageButton>			
	</LinearLayout>		
	</RelativeLayout>
<!-- end bottom button  -->
	<RelativeLayout android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:layout_height="fill_parent" android:layout_below="@+id/RelativeLayout_Title" android:layout_above="@+id/ChapterList_RelativeLayout_Clean" android:background="#FFFFFF" android:visibility="visible">
		<ListView android:layout_height="fill_parent" android:layout_width="fill_parent" android:dividerHeight="1dip" android:cacheColorHint="#00000000" android:drawSelectorOnTop="false" android:id="@android:id/list" android:divider="#394D1B"></ListView>
		<TextView android:layout_height="wrap_content" android:textColor="#ff000000" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/empty" android:text="@string/no_data" android:layout_centerHorizontal="true"></TextView>
	</RelativeLayout>   


 </RelativeLayout>

