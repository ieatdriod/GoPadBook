<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:shelves="http://schemas.android.com/apk/res/com.gsimedia.gsiebook">

	<!-- page control -->
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
	<!-- 	 -->	
		<com.gsimedia.gsiebook.lib.PagesView
			android:id="@+id/gsimedia_pdf_view" android:layout_width="fill_parent"
			android:layout_height="fill_parent" ></com.gsimedia.gsiebook.lib.PagesView>

	
	</LinearLayout>
	<!-- find control -->
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/findButtonsLayout"
		android:background="@android:color/transparent" android:visibility="gone">

		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true" android:paddingBottom="50dip">
			<ImageView android:background="@drawable/gsi_search_bg"
				android:id="@+id/bg" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:clickable="true" />
			<ImageButton android:id="@+id/findHideButton"
				android:layout_width="wrap_content" android:src="@drawable/gsi_search_cancel"
				android:layout_height="wrap_content" android:background="@android:color/transparent"
				android:layout_alignRight="@id/bg" />
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true" android:layout_alignBottom="@id/bg">
				<ImageButton android:id="@+id/findPrevButton"
					android:padding="8dip" android:layout_width="wrap_content"
					android:src="@drawable/gsi_search_left" android:layout_height="wrap_content"
					android:background="@android:color/transparent"
					android:soundEffectsEnabled="true" />
				<ImageButton android:id="@+id/findALLButton"
					android:layout_width="wrap_content" android:src="@drawable/gsi_search_mid"
					android:layout_height="wrap_content" android:background="@android:color/transparent"
					android:padding="5dip" android:soundEffectsEnabled="true" />
				<ImageButton android:id="@+id/findNextButton"
					android:padding="8dip" android:layout_width="wrap_content"
					android:src="@drawable/gsi_search_right" android:layout_height="wrap_content"
					android:background="@android:color/transparent" />
			</LinearLayout>
		</RelativeLayout>
	</RelativeLayout>
	
		<!-- first page -->
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		<RelativeLayout android:id="@+id/firstpage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="invisible">
			<ImageView android:layout_height="fill_parent" android:background="@drawable/gsi_help_bg" android:layout_width="fill_parent" android:scaleType="matrix"></ImageView>
			<ImageView android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_width="wrap_content" android:background="@drawable/gsi_help_button_folding" android:id="@+id/imageView_fold" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_marginRight="15dip" android:layout_marginTop="15dip"></ImageView>
	
			<LinearLayout android:id="@+id/Help_left"
				android:layout_alignParentLeft="true" android:layout_height="fill_parent" android:layout_width="wrap_content">
				<ImageView android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_marginLeft="15dip" android:background="@drawable/gsi_help_epub_previous"></ImageView>
				
			</LinearLayout>
	
			<LinearLayout android:id="@+id/Help_right"
				android:layout_width="wrap_content" android:layout_alignParentRight="true" android:layout_height="fill_parent">
			
				<ImageView android:layout_height="wrap_content"
					android:scaleType="fitXY" android:layout_gravity="center_vertical"
					android:layout_width="wrap_content" android:layout_marginRight="15dip"
					android:background="@drawable/gsi_help_epub_next"></ImageView>
	
			</LinearLayout>
	
			<LinearLayout android:id="@+id/Help_center"
				android:layout_height="fill_parent" android:layout_width="fill_parent">
				<LinearLayout android:layout_height="wrap_content"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_gravity="center_vertical">
	<ImageView android:id="@+id/ImageView_longPress"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
		android:background="@drawable/gsi_help_button_longpress"></ImageView>
	<ImageView android:background="@drawable/gsi_help_button_center"
		android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/ImageView_clickManual"
		android:layout_weight="1"></ImageView>
		
<ImageView android:background="@drawable/gsi_help_button_contentzoom"
		android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/contentzoom"
		android:layout_weight="1"></ImageView>	
	<ImageView android:background="@drawable/gsi_help_button_shift"
		android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/ImageView_LRshift"
		android:layout_weight="1"></ImageView>	
		
</LinearLayout>
	
			</LinearLayout>

	</RelativeLayout>
	
	</RelativeLayout>
	
	
	<!-- last page -->
	<RelativeLayout android:id="@+id/lastpage"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:background="@drawable/gsi_paper01" android:gravity="center"
		android:visibility="invisible">

		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerInParent="true">
			<ImageView android:id="@+id/ImageView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:src="@drawable/gsi_lastpage01"
				android:layout_centerHorizontal="true" />
			<TextView android:id="@+id/msg" android:layout_below="@+id/ImageView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textSize="27dip" android:layout_centerHorizontal="true"
				android:textColor="@android:color/black" android:layout_margin="23dip"
				android:gravity="center_horizontal" android:text="本書為試閱版，請問是否立即購買正式版？" />
		</RelativeLayout>

		<Button android:id="@+id/action" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/gsi_trial01_btn"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true" />
	</RelativeLayout>
	<!-- header bar -->
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/RelativeLayout_Title"
			android:layout_gravity="top|center_horizontal" android:visibility="invisible">
			<ImageView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:background="@drawable/gsi_br01"
				android:layout_alignParentTop="true" />
			<Button android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/gsimedia_btn_title_left"
				android:background="@drawable/gsi_button01_btn"
				android:layout_alignParentLeft="true" android:clickable="true" />
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/gsimedia_headline_left"
				android:background="@drawable/gsi_head_line_left"
				android:layout_toRightOf="@id/gsimedia_btn_title_left" />
			<Button android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/gsimedia_btn_title_right"
				android:background="@drawable/gsi_button02_btn"
				android:layout_alignParentRight="true" />
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/gsimedia_headline_right"
				android:background="@drawable/gsi_head_line_right"
				android:layout_toLeftOf="@+id/gsimedia_btn_title_right" />
			<TextView android:id="@+id/gsimedia_title"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/gsimedia_headline_left"
				android:layout_toLeftOf="@+id/gsimedia_headline_right"
				android:layout_centerHorizontal="true" android:ellipsize="marquee"
				android:marqueeRepeatLimit="marquee_forever" android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_alignBottom="@id/gsimedia_btn_title_left"
				android:layout_alignTop="@id/gsimedia_btn_title_left"
				android:padding="5dip" android:focusableInTouchMode="true"
				android:focusable="true" android:gravity="center" android:textColor="#ffffff"
				android:singleLine="true" android:text="" />
		</RelativeLayout>
		<ImageView android:layout_width="wrap_content"
			android:visibility="invisible" android:layout_height="wrap_content"
			android:id="@+id/gsimedia_img_bookmark" android:layout_below="@id/RelativeLayout_Title"
			android:layout_alignParentRight="true" android:src="@drawable/gsi_tab02"
			android:clickable="true" />
		<ImageView android:layout_width="wrap_content"
			android:visibility="invisible" android:layout_height="wrap_content"
			android:id="@+id/gsimedia_img_annotation" android:layout_below="@+id/gsimedia_img_bookmark"
			android:layout_alignParentRight="true" android:src="@drawable/gsi_tab01" />
	</RelativeLayout>
	<!-- control panel -->
	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/RelativeLayout_Ctls"
		android:layout_alignParentBottom="true" android:visibility="invisible">
		
		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/gsi_br05"
			android:id="@+id/RelativeLayout_SeekBar" android:layout_alignParentBottom="true" >
			<SeekBar android:id="@+id/SeekBar" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_alignParentLeft="true"
				android:layout_centerVertical="true" android:paddingLeft="20dip"
				android:paddingRight="20dip" android:thumb="@drawable/gsi_time02"
				android:progressDrawable="@drawable/gsi_time01_progress"
				android:minHeight="10dip" android:maxHeight="10dip" android:max="100"/>
				
			<TextView android:id="@+id/TextView_Info_Page"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:ellipsize="marquee"
				android:focusableInTouchMode="true"
				android:focusable="true" android:gravity="center" android:textColor="#ffffff"
				android:singleLine="true" android:layout_alignParentRight="true" android:text="252 / 330" android:paddingRight="5dip"/>	
				
		</RelativeLayout>
		
		<RelativeLayout android:id="@+id/ctls" android:layout_above="@+id/RelativeLayout_SeekBar" 
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@drawable/gsi_br03" android:gravity="center_horizontal">
			<HorizontalScrollView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:scrollbars="none">
				<RelativeLayout android:layout_width="wrap_content"
					android:id="@+id/ctl" android:layout_height="wrap_content">	
								
					<Button android:id="@+id/gsimedia_btn_help"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:background="@drawable/gsi_button19_btn" />
					<Button android:id="@+id/gsimedia_btn_rotate"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_help"
						android:background="@drawable/gsi_button20_btn" />
					<Button android:id="@+id/gsimedia_btn_switch"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_rotate"
						android:background="@drawable/gsi_button22_btn" />
					
					<Button android:id="@+id/gsimedia_btn_bookmarkcolor"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_switch"
						android:background="@drawable/gsi_button24_btn" />
					
					<Button android:id="@+id/gsimedia_btn_endline"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_bookmarkcolor"
						android:background="@drawable/gsi_button_endline" />
								
				</RelativeLayout>
			</HorizontalScrollView>
		</RelativeLayout>
	
		<RelativeLayout android:id="@+id/ctls_color" android:layout_above="@+id/ctls" 
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@drawable/gsi_br04" android:gravity="center_horizontal" android:visibility="invisible">
			<HorizontalScrollView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:scrollbars="none" android:id="@+id/HorizontalScrllView_Color">
				<RelativeLayout android:layout_width="wrap_content"
					android:id="@+id/ctl_color" android:layout_height="wrap_content">
<!--  
					<Button android:id="@+id/gsimedia_btn_red"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:background="@drawable/gsi_red" />
					<Button android:id="@+id/gsimedia_btn_yellow"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_red"
						android:background="@drawable/gsi_yellow" />
					<Button android:id="@+id/gsimedia_btn_blue"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_yellow"
						android:background="@drawable/gsi_blue" />						
-->						
				</RelativeLayout>
			</HorizontalScrollView>
		</RelativeLayout>
	
	
	</RelativeLayout>

	<!-- info display -->
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<RelativeLayout android:id="@+id/RelativeLayout_Info"
			android:visibility="invisible" android:background="@drawable/gsi_infobg02"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_centerInParent="true" android:gravity="center_vertical">
			<!--<TextView android:layout_height="wrap_content" android:id="@+id/TextView_Info_Title" 
				android:text="Untitled Document" android:ellipsize="marquee" android:textStyle="bold" 
				android:textSize="15dip" android:textColor="#FFFFFF" android:layout_width="wrap_content" 
				android:layout_centerHorizontal="true" android:singleLine="true" android:gravity="center" 
				/> -->
			<TextView android:layout_height="wrap_content" android:text="位於全書的頁"
				android:id="@+id/TextView_Info_Page_n" android:ellipsize="marquee"
				android:textStyle="bold" android:textSize="15dip" android:textColor="#FFFFFF"
				android:layout_width="wrap_content" android:layout_below="@+id/TextView_Info_Title"
				android:layout_centerHorizontal="true" android:singleLine="true"
				android:gravity="center" />
		</RelativeLayout>
	</RelativeLayout>
</merge>