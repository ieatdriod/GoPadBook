<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<!-- top panel -->
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/RelativeLayout_Title">

		<ImageButton android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:background="@drawable/gsi_br06" android:id="@+id/TopBG"></ImageButton>


		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:background="@drawable/gsi_button01_btn" android:id="@+id/mi_ImageButton_Back">
		</ImageButton>

		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/RelativeLayout_Catalog" android:layout_toRightOf="@+id/mi_ImageButton_Back">

			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/mi_ImageButton_bg"
				android:background="@drawable/gsi_title_bg01" />

			<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/gsi_title09" android:id="@+id/mi_ImageButton"></ImageButton>
		</RelativeLayout>

	</RelativeLayout>
	<!-- end top panel -->

   <!-- content area -->
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/RelativeLayout_Title" android:background="#FFFFFF">

	    <ScrollView 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
		 	<LinearLayout
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent">   
			   	<ImageView 
				   	android:id="@+id/mi_ImageView01" 
    				android:layout_width="64dip"
    				android:layout_height="100dip" 
    				android:scaleType="fitXY"
				   	android:src="@drawable/ivi_nonepict02" 
				   	android:layout_marginLeft="50dip" 
				   	android:layout_marginTop="50dip">
			   	</ImageView>
			   		
			   		
			   	<EditText
					android:id="@+id/mi_area_category"
				    android:layout_width="fill_parent" 
				    android:layout_height="fill_parent"
				    android:editable="false"
				    android:cursorVisible="false"
				    android:gravity="top|left"
				    android:longClickable="false"
				    android:background="#00000000"
				    android:layout_marginTop="16dip" 
				    android:layout_marginLeft="50dip" 
				    android:layout_marginRight="50dip" 
				    />			   		
			   	
			   	<EditText
					android:id="@+id/mi_area_title"
				    android:layout_width="fill_parent" 
				    android:layout_height="fill_parent"
				    android:editable="false"
				    android:cursorVisible="false"
				    android:gravity="top|left"
				    android:longClickable="false"
				    android:background="#00000000"
				    android:layout_marginTop="16dip" 
				    android:layout_marginLeft="50dip" 
				    android:layout_marginRight="50dip" 
				    />   
				    
			   	<EditText
					android:id="@+id/mi_area_publisher"
				    android:layout_width="fill_parent" 
				    android:layout_height="fill_parent"
				    android:editable="false"
				    android:cursorVisible="false"
				    android:gravity="top|left"
				    android:longClickable="false"
				    android:background="#00000000"
				    android:layout_marginTop="16dip" 
				    android:layout_marginLeft="50dip" 
				    android:layout_marginRight="50dip" 
				    />   
				    
			   	<EditText
					android:id="@+id/mi_area_auther"
				    android:layout_width="fill_parent" 
				    android:layout_height="fill_parent"
				    android:editable="false"
				    android:cursorVisible="false"
				    android:gravity="top|left"
				    android:longClickable="false"
				    android:background="#00000000"
				    android:layout_marginTop="16dip" 
				    android:layout_marginLeft="50dip" 
				    android:layout_marginRight="50dip" 
				    />   				    				    
			 
				<ImageButton android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_gravity="center"
					android:layout_marginTop="25dip"
					android:id="@+id/mi_ImageButton01" 
					android:background="@drawable/gsi_more01_btn">
					</ImageButton>
			</LinearLayout>   
	    </ScrollView>
	    
	</LinearLayout>	
   	<!-- end content area --> 	    
 </RelativeLayout>
   

