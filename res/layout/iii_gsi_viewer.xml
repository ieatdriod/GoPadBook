<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:shelves="http://schemas.android.com/apk/res/com.gsimedia.gsiebook">

	<RelativeLayout
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:orientation="vertical" 
  		android:id="@+id/reader_full_layout">
	</RelativeLayout>


	<!-- page control -->
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
	
<!-- -->
		<org.iii.ideas.reader.renderer.EpubView
			android:id="@+id/gsimedia_pdf_view" android:layout_width="fill_parent"
			android:layout_height="fill_parent">
		</org.iii.ideas.reader.renderer.EpubView>
	
	</LinearLayout>
				<!-- first page -->
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
				
		<RelativeLayout android:id="@+id/firstpage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="invisible">
			<ImageView android:layout_height="fill_parent" android:background="@drawable/gsi_help_bg" android:layout_width="fill_parent" android:scaleType="matrix"></ImageView>
			<ImageView android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_width="wrap_content" android:background="@drawable/gsi_help_button_folding" android:id="@+id/imageView_fold" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_marginRight="15dip" android:layout_marginTop="15dip"></ImageView>
	
			<LinearLayout android:id="@+id/Help_left"
				android:layout_alignParentLeft="true" android:layout_height="fill_parent" android:layout_width="wrap_content">
				<ImageView android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_marginLeft="15dip" android:background="@drawable/gsi_help_epub_previous"></ImageView>
				
			</LinearLayout>
	
			<LinearLayout android:id="@+id/Help_right"
				android:layout_width="wrap_content" android:layout_alignParentRight="true" android:layout_height="fill_parent">
				<ImageView android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_marginRight="15dip" android:background="@drawable/gsi_help_epub_next"></ImageView>
	
			</LinearLayout>
	
			<LinearLayout android:id="@+id/Help_center"
				android:layout_height="fill_parent" android:layout_width="fill_parent">
				<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:layout_gravity="center_vertical">
					<ImageView android:id="@+id/ImageView_resize" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_width="fill_parent" android:layout_weight="1" android:src="@drawable/gsi_help_button_resize" ></ImageView>
					<ImageView android:id="@+id/ImageView_longPress" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_width="fill_parent" android:layout_weight="1" android:src="@drawable/gsi_help_button_longpress"></ImageView>
					<ImageView android:src="@drawable/gsi_help_button_center" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/ImageView_clickManual" ></ImageView>
					<ImageView android:src="@drawable/gsi_help_button_piczoom" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/ImageView_piczoom" ></ImageView>
				</LinearLayout>
	
			</LinearLayout>

	</RelativeLayout>
	
	</RelativeLayout>
	<!-- last page -->
	<RelativeLayout android:id="@+id/lastpage"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:background="@drawable/gsi_paper01" android:gravity="center"
		android:visibility="invisible">

		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerInParent="true">
			<ImageView android:id="@+id/ImageView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:src="@drawable/gsi_lastpage01"
				android:layout_centerHorizontal="true" />
			<TextView android:id="@+id/msg" android:layout_below="@+id/ImageView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textSize="27dip" android:layout_centerHorizontal="true"
				android:textColor="@android:color/black" android:layout_margin="23dip"
				android:gravity="center_horizontal" android:text="本書為試閱版，請問是否立即購買正式版？" />
		</RelativeLayout>

		<Button android:id="@+id/action" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/gsi_trial01_btn"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true" />
	</RelativeLayout>
	<!-- header bar -->
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/RelativeLayout_Title"
			android:layout_gravity="top|center_horizontal" android:visibility="invisible">
			<ImageView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:background="@drawable/gsi_br01"
				android:layout_alignParentTop="true" />
			<Button android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/gsimedia_btn_title_left"
				android:background="@drawable/gsi_button01_btn"
				android:layout_alignParentLeft="true" android:clickable="true" />
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/gsimedia_headline_left"
				android:background="@drawable/gsi_head_line_left"
				android:layout_toRightOf="@id/gsimedia_btn_title_left" />
			<Button android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/gsimedia_btn_title_right"
				android:background="@drawable/gsi_button02_btn"
				android:layout_alignParentRight="true" />
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/gsimedia_headline_right"
				android:background="@drawable/gsi_head_line_right"
				android:layout_toLeftOf="@+id/gsimedia_btn_title_right" />
			<TextView android:id="@+id/gsimedia_title"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/gsimedia_headline_left"
				android:layout_toLeftOf="@+id/gsimedia_headline_right"
				android:layout_centerHorizontal="true" android:ellipsize="marquee"
				android:marqueeRepeatLimit="marquee_forever" android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_alignBottom="@id/gsimedia_btn_title_left"
				android:layout_alignTop="@id/gsimedia_btn_title_left"
				android:padding="5dip" android:focusableInTouchMode="true"
				android:focusable="true" android:gravity="center" android:textColor="#ffffff"
				android:singleLine="true" android:text="" />
		</RelativeLayout>
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/gsimedia_img_bookmark_right" 
			android:layout_alignParentRight="true" android:clickable="true" 
			android:src="@drawable/folding" android:visibility="visible"/>
		
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/gsimedia_img_bookmark_left" 
			android:clickable="true" 
			android:src="@drawable/folding" android:visibility="visible" android:layout_alignParentLeft="true"/>	
			
		<ImageView android:layout_width="wrap_content"
			android:visibility="invisible" android:layout_height="wrap_content"
			android:id="@+id/gsimedia_img_annotation" android:layout_below="@+id/gsimedia_img_bookmark_right"
			android:layout_alignParentRight="true" android:src="@drawable/folding" />
	</RelativeLayout>
	<!-- control panel -->
	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/RelativeLayout_Ctls"
		android:layout_alignParentBottom="true" android:visibility="invisible">
		
		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/gsi_br05"
			android:id="@+id/RelativeLayout_SeekBar" android:layout_alignParentBottom="true" >
											<LinearLayout android:layout_height="wrap_content" android:background="@drawable/gsi_br05" android:layout_width="fill_parent" android:orientation="horizontal">
				
				<SeekBar android:id="@+id/SeekBar" android:layout_width="fill_parent"
				android:paddingLeft="20dip"
				android:paddingRight="20dip" android:thumb="@drawable/gsi_time02"
				android:progressDrawable="@drawable/gsi_time01_progress"
				android:minHeight="10dip" android:maxHeight="10dip" android:max="100" android:layout_height="wrap_content" android:layout_gravity="center_vertical"/>
				
			</LinearLayout>
					
				<TextView android:id="@+id/TextView_Info_Page"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:ellipsize="marquee"
				android:focusableInTouchMode="true"
				android:focusable="true" android:gravity="center" android:textColor="#ffffff"
				android:singleLine="true" android:layout_alignParentRight="true" android:text="" android:paddingRight="5dip"/>	
				
		</RelativeLayout>
		
						<RelativeLayout android:id="@+id/ctls" android:layout_above="@+id/RelativeLayout_SeekBar" 
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@drawable/gsi_br03" android:gravity="center_horizontal">
			<HorizontalScrollView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:scrollbars="none">
				<RelativeLayout android:layout_width="wrap_content"
					android:id="@+id/ctl" android:layout_height="wrap_content">
											
					<Button android:id="@+id/gsimedia_btn_help"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:background="@drawable/gsi_button19_btn" />
						
					<Button android:id="@+id/gsimedia_btn_rotate"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_help"
						android:background="@drawable/gsi_button20_btn" />
						
					<Button android:id="@+id/gsimedia_btn_bgcolor"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_rotate"
						android:background="@drawable/gsi_button26_btn" />
					
					<Button android:id="@+id/gsimedia_btn_Asize"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_bgcolor"
						android:background="@drawable/gsi_button36_btn" />
					
					<Button android:id="@+id/gsimedia_btn_Acolor"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_Asize"
						android:background="@drawable/gsi_button27_btn" />
						
					<Button android:id="@+id/gsimedia_btn_linecolor"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_Acolor"
						android:background="@drawable/gsi_button24_btn" />	
					
					<Button android:id="@+id/gsimedia_btn_nightmode"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_linecolor"
						android:background="@drawable/gsi_button28_btn" />
					
					<Button android:id="@+id/gsimedia_btn_chinese_type"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_nightmode"
						android:background="@drawable/gsi_button32_btn"  />
					
					<Button android:id="@+id/gsimedia_btn_flip"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_chinese_type"
						android:background="@drawable/gsi_button34_btn"  />
						
					<Button android:id="@+id/gsimedia_btn_other"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_flip"
						android:background="@drawable/gsi_button30_btn" 
						android:visibility="gone" />	
					
					<Button android:id="@+id/gsimedia_btn_endline"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/gsimedia_btn_other"
						android:background="@drawable/gsi_button_endline" />
								
				</RelativeLayout>
			</HorizontalScrollView>
		</RelativeLayout>
	
		<RelativeLayout android:id="@+id/ctls_color" android:layout_above="@+id/ctls" 
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@drawable/gsi_br04" android:gravity="center_horizontal" android:visibility="invisible">
			<HorizontalScrollView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:scrollbars="none" android:id="@+id/HorizontalScrllView_Color">
				<RelativeLayout android:layout_width="wrap_content"
					android:id="@+id/ctl_color" android:layout_height="wrap_content">
			
				</RelativeLayout>
			</HorizontalScrollView>
		</RelativeLayout>
	
	
<RelativeLayout android:layout_above="@+id/ctls" 
	android:layout_width="fill_parent" android:layout_height="wrap_content"

android:background="@drawable/gsi_br04" android:gravity="center_horizontal" android:visibility="invisible" android:id="@+id/ctls_fonsize">
					<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
android:orientation="horizontal" android:background="@drawable/gsi_br04">
		<RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
android:paddingLeft="25dip" android:paddingRight="25dip" android:layout_gravity="center_vertical" android:id="@+id/ctl_seekbar">
												</RelativeLayout>
				</LinearLayout>
				</RelativeLayout>
							</RelativeLayout>
	</merge>