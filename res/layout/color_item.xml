<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:clickable="true" android:background="@drawable/gsi_br04_cbg"
	android:id="@+id/Color_item_relativelayout">
	<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/color_transparent"
		android:layout_centerInParent="true" />
		
	<ImageView android:id="@+id/icon_selected" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerInParent="true" android:background="@drawable/selected" android:visibility="invisible"/>	

</RelativeLayout>