<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:clickable="true" android:background="@drawable/gsi_br04_cbg"
	android:id="@+id/Color_item_LinearLayout">
	
	<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:background="@drawable/color_transparent" android:layout_gravity="center_vertical" android:paddingLeft="5dip">
		<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/color_transparent" />
			
		<ImageView android:id="@+id/icon_selected" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/selected" android:visibility="invisible"/>	

	</RelativeLayout>
</LinearLayout>