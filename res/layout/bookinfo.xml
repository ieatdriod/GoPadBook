
<RelativeLayout android:layout_width="wrap_content" android:layout_weight="1" 
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

	<com.taiwanmobile.myBook_PAD.TWMImageView android:id="@+id/cover" android:layout_width="wrap_content"
		android:layout_height="fill_parent" 
		android:src="@drawable/mask" android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true" android:layout_margin="1dip" android:scaleType="matrix"/>

	<ImageView android:id="@+id/type" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:scaleType="fitXY"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true" />

	<ImageView android:id="@+id/deleteIcon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:scaleType="fitXY"
		android:background="@drawable/del_icon" android:visibility="invisible" />
		
	<ProgressBar style="?android:attr/progressBarStyleHorizontal"
		android:visibility="invisible" android:layout_width="fill_parent"
		android:layout_height="12dip" android:id="@+id/progress"
		android:layout_marginBottom="10dip" android:max="100"
		android:layout_margin="10dip" android:layout_alignParentBottom="true"/>

</RelativeLayout>